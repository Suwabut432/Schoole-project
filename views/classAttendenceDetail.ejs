<!DOCTYPE html>
<html>

<head>
    <title>Student Attendance</title>
    <style>
        body {
            font-family: Arial;
            background: #f4f6f8;
            padding: 30px;
        }

        .Introcard,
        .Yearcard {
            background: #fff;
            padding: 20px;
            border-radius: 6px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
        }

        .Yearcard {
            text-align: center;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            background: #fff;
            margin-bottom: 30px;
        }

        th,
        td {
            padding: 10px;
            border: 1px solid #ddd;
            text-align: center;
        }

        th {
            background: #007bff;
            color: #fff;
        }

        .present {
            background: #d4edda;
            color: #155724;
            font-weight: bold;
        }

        .absent {
            background: #f8d7da;
            color: #721c24;
            font-weight: bold;
        }

        .late {
            background-color: #fff3cd;
            color: #856404;
            font-weight: bold;
        }
    </style>
</head>

<body>

    <div class="Introcard">
        <h2>Class Attendance Detail</h2>
        <p><strong>Class Name:</strong>
            <%= attendence.className?.name || "-" %>
        </p>
        <p><strong>Incharge:</strong>
            <%= attendence.className?.incharge || "-" %>
        </p>
    </div>

    <% const monthNames=['Jan','Feb','Mar','Apr','May','Jun','Jul','Aug','Sep','Oct','Nov','Dec']; %>

        <% attendence.years.forEach(y=> { %>

            <div class="Yearcard">
                <h2>Year: <%= y.year %>
                </h2>
            </div>

            <% y.months.forEach(m=> {
                const totalDays = new Date(y.year, m.month + 1, 0).getDate();

                const studentMap = {};
                m.days.forEach(att => {
                if (!att.studentName) return;
                const id = att.studentName._id.toString();
                if (!studentMap[id]) {
                studentMap[id] = att.studentName;
                }
                });

                const students = Object.values(studentMap).sort(
                (a, b) => (a.rollNo || 0) - (b.rollNo || 0)
                );
                %>

                <div class="Yearcard">
                    <h2>Month: <%= monthNames[m.month] %>
                    </h2>
                </div>

                <table>
                    <tr>
                        <th>R.#</th>
                        <th>Name</th>
                        <% for (let d=1; d <=totalDays; d++) { %>
                            <th>
                                <%= d %>
                            </th>
                            <% } %>
                                <th>Total P</th>
                    </tr>

                    <% students.forEach(student=> { %>
                        <tr>
                            <td>
                                <%= student.rollNo || "-" %>
                            </td>
                            <td>
                                <%= student.name || "-" %>
                            </td>

                            <% const dayStatus={}; m.days.forEach(att=> {
                                if (att.studentName && att.studentName._id.equals(student._id)) {
                                const dayNum = att.date.getDate();
                                dayStatus[dayNum] =
                                att.status === "Present" ? "P" :
                                att.status === "Late" ? "L" : "A";
                                }
                                });
                                %>

                                <% for (let d=1; d <=totalDays; d++) { const status=dayStatus[d] || "" ; const
                                    cls=status==="P" ? "present" : status==="A" ? "absent" : status==="L" ? "late" : ""
                                    ; %>
                                    <td class="<%= cls %>">
                                        <%= status %>
                                    </td>
                                    <% } %>

                                        <td>
                                            <%= Object.values(dayStatus).filter(s=> s === "P").length %>
                                        </td>
                        </tr>
                        <% }) %>

                </table>

                <% }) %>
                    <% }) %>

</body>

</html>