<!DOCTYPE html>
 <html>
 <head>
   <title>Advanced Attendance</title>
   <link rel="stylesheet" href="/style.css">
   <style>
     body {
   background: #eef1f4;
   font-family: Arial, sans-serif;
 }
 .container {
   width: 80%;
   margin: 40px auto;
   background: #fff;
   padding: 25px;
   border-radius: 8px;
 }
 h1 {
   text-align: center;
 }
 select {
   padding: 8px;
   margin-bottom: 15px;
 }
 table {
   width: 100%;
   border-collapse: collapse;
 }
 th, td {
   border: 1px solid #ccc;
   padding: 10px;
   text-align: center;
 }
 button {
   margin-top: 20px;
   padding: 10px 25px;
   background: #007bff;
   color: white;
   border: none;
   cursor: pointer;
 }

   </style>
 </head>
 <body>
 <div class="container">
   <h1>Advanced Attendance System</h1>
   <form action="/student/attendence" method="POST">
     <label>Select Subject</label>
     <select name="className" required>
         <option value="<%= classes._id %>">
           <%= classes.name %>
         </option>
     </select>
     <table>
       <tr>
         <th>Roll No</th>
         <th>Name</th>
         <th>Present</th>
         <th>Absent</th>
         <th>Late</th>
       </tr>
       <% students.forEach((student, index) => { %>
       <tr>
         <td><%= student.rollNo %></td>
         <td><%= student.name %></td>
         <td><input type="radio"
             name="attendance[<%= index %>][status]"
             value="Present" required></td>
         <td><input type="radio"
             name="attendance[<%= index %>][status]"
             value="Absent"></td>
         <td><input type="radio"
             name="attendance[<%= index %>][status]"
             value="Late"></td>
         <input type="hidden"
           name="attendance[<%= index %>][studentId]"
           value="<%= student._id %>">
       </tr>
       <% }) %>
     </table>
     <button type="submit">Save Attendance</button>
   </form>
 </div>
 </body>
 </html>